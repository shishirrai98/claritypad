{
  "name": "claritypad",
  "type": "module",
  "version": "1.0.0",
  "description": "A developer-friendly WYSIWYG editor with plugin support",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/types.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./react": "./dist/react.esm.js",
    "./plugins/image": "./dist/plugins/image.esm.js",
    "./plugins/table": "./dist/plugins/table.esm.js",
    "./types": "./dist/types.d.ts"
  },
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint src",
    "format": "prettier --write src",
    "test": "jest",
    "prepublishOnly": "npm run lint && npm run format && npm run test && npm run build"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "eslint-plugin-react-hooks": "^5.2.0",
    "sanitize-html": "^2.13.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/react": "^19.1.6",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^8.9",
    "eslint-plugin-react": "^7.37.1",
    "jest": "^29.7.0",
    "prettier": "^2.3.3",
    "rollup": "^4.24.0",
    "typescript": "^5.6.2"
  },
  "author": "Shishir Rai <raishishir774@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shishirrai98/claritypad.git"
  },
  "keywords": [
    "wysiwyg",
    "editor",
    "rich-text",
    "javascript",
    "react",
    "typescript",
    "claritypad"
  ],
  "files": [
    "dist",
    "LICENSE"
  ]
}
